{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "baseUrl": "./",
      "typeRoots": [
         "@types",
         "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules"
   ]
}
