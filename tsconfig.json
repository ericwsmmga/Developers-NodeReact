{
    "compilerOptions": {
      "target": "es5",                                
       "module": "commonjs",                           
       "lib": ["es6"],                                 
       "allowJs": true,                                
     "outDir": "build",                              
       "rootDir": "./src",                             
        "strict": false,                               
       "noImplicitAny": true,                          
       "strictPropertyInitialization": false,        
        "baseUrl": "./",                             
       "paths": {
         "@config/*":[
           "src/config/*"
         ],
         "@modules/*":[
           "src/modules/*"
         ],
         "@shared/*":[
           "src/shared/*"
         ],
       },                             
       "esModuleInterop": true,                        
       "experimentalDecorators": true,              
       "emitDecoratorMetadata": true,               
       "resolveJsonModule": true,                     
       "skipLibCheck": true,                          
       "forceConsistentCasingInFileNames": true       
     } 
  }
   